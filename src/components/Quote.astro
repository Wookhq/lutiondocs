---
const { quote, author, avatar } = Astro.props;
---

<div class="quote-card">
  <blockquote>{quote}</blockquote>
  <div class="quote-footer">
    {avatar && <img src={avatar} alt={author} class="avatar" />}
    <span>â€” {author}</span>
  </div>
</div>

<style>
  .quote-card {
    background: var(--sl-color-bg-soft);
    border: 1px solid var(--sl-color-hairline-light);
    border-radius: 0.75rem;
    padding: 1.25rem 1.5rem;
    margin: 1.5rem 0;
    box-shadow: var(--sl-shadow-sm);
    text-align: left;
  }

  blockquote {
    font-size: 1.1rem;
    line-height: 1.6;
    font-style: italic;
    color: var(--sl-color-text);
    margin: 0 0 1rem 0;
  }

  .quote-footer {
    display: flex;
    align-items: center;
    gap: 0.6rem;
    font-size: 0.95rem;
    font-weight: 600;
    color: var(--sl-color-text-accent);
  }

  .avatar {
    width: 32px;
    height: 32px;
    border-radius: 50%;
    object-fit: cover;
    border: 1px solid var(--sl-color-hairline-light);
  }
</style>
